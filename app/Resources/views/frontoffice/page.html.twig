{% extends 'base.html.twig' %}

{% block body %}



		<!-- Start blog -->
		<section id="blog">
			<div class="blogg">
				<div class="container">
					<div class="row">
						<div class="col-md-8 col-sm-8">
							<div class="blog">
								<div class="b-img"><a href="#"><img src="{{ asset('uploads/posts/'~ post.imageName) | imagine_filter('actualite') }}" alt="image" /></a></div>
								<div class="b-content">
									<time datetime="2016-10-19" class="icon">
									  <span>{{ post.publieLe|date('d')}}</span>
									  <strong>{{ post.publieLe|date('M')}}</strong>
									</time>
									<div class="b-txt">
										<h3>{{ post.titre }}</h3>
										<p class="content">
										<i class="fa fa-user" aria-hidden="true"></i>Par, <a href="#" class="admin">{{ post.publiePar|title }}</a>
										</p>
									</div>
									<div class="b-single">
										{{ post.contenu|raw }}
									</div>
								</div>
							</div>
						</div>
						<div class="col-md-4 col-sm-4">
							<div class="blog-widget">
                <div class="facebook">

                        <div class="fb-page" data-href="https://web.facebook.com/www.avstransports.ci/" data-height="400" data-small-header="false" data-adapt-container-width="true" data-hide-cover="false" data-show-facepile="true" data-show-posts="true">
                            <div class="fb-xfbml-parse-ignore">
                                <blockquote cite="https://web.facebook.com/www.avstransports.ci/">
                                    <a href="https://web.facebook.com/www.avstransports.ci/">TRANSPORTS AVS</a>
                                </blockquote>
                            </div>
                        </div>

                    </div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</section>


{% endblock %}
