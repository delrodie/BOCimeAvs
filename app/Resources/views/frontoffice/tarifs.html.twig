{% extends 'base.html.twig' %}

{% block body %}



		<!-- Start blog -->
		<section id="blog">
			<div class="blogg">
				<div class="container">
					<div class="row">
						<div class="col-md-8 col-sm-8">
							<div class="blog">
								<div class="b-img"><a href="#"></a></div>
								<div class="b-content">
									<div class="row" style="background-color: #ccc;">
										<div class="col-sm-4 text-center" style="border: #ccc 1px solid">
											<strong>Departs</strong>
										</div>
										<div class="col-sm-4 text-center" style="border: #ccc 1px solid">
											<strong>Arriv√©es</strong>
										</div>
										<div class="col-sm-4 text-center" style="border: #ccc 1px solid">
											<strong>Montants</strong>
										</div>
									</div>
									{% for tarif in tarifs %}
									<div class="row" style="">
										<div class="col-sm-4" style="border-left: #ccc 1px solid; border-bottom: #ccc 1px solid; border-right: #ccc 1px solid">
											{{ tarif.depart|title }}
										</div>
										<div class="col-sm-4" style="border-left: #ccc 1px solid; border-bottom: #ccc 1px solid; border-right: #ccc 1px solid">
											{{ tarif.arrivee|title }}
										</div>
										<div class="col-sm-4 text-center" style="border-left: #ccc 1px solid; border-bottom: #ccc 1px solid; border-right: #ccc 1px solid">
											<strong>{{ tarif.montant}}</strong> FCFA
										</div>
									</div>
									{% endfor %}
								</div>
							</div>
						</div>
						<div class="col-md-4 col-sm-4">
							<div class="blog-widget">
                <div class="facebook">

                        <div class="fb-page" data-href="https://web.facebook.com/www.avstransports.ci/" data-height="400" data-small-header="false" data-adapt-container-width="true" data-hide-cover="false" data-show-facepile="true" data-show-posts="true">
                            <div class="fb-xfbml-parse-ignore">
                                <blockquote cite="https://web.facebook.com/www.avstransports.ci/">
                                    <a href="https://web.facebook.com/www.avstransports.ci/">TRANSPORTS AVS</a>
                                </blockquote>
                            </div>
                        </div>

                    </div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</section>


{% endblock %}
